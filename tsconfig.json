{
  "extends": "@tetcoin/dev/config/tsconfig.json",
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@tetcoin/hw-ledger": [ "packages/ledger/src" ],
      "@tetcoin/hw-ledger/*": [ "packages/ledger/src/*" ],
      "@tetcoin/hw-ledger-transports": [ "packages/hw-ledger-transports/src/browser" ],
      "@tetcoin/hw-ledger-transports/*": [ "packages/hw-ledger-transports/src/browser" ],
      "@tetcoin/keyring": [ "packages/keyring/src" ],
      "@tetcoin/keyring/*": [ "packages/keyring/src/*" ],
      "@tetcoin/networks": [ "packages/networks/src" ],
      "@tetcoin/networks/*": [ "packages/networks/src/*" ],
      "@tetcoin/util-crypto": [ "packages/util-crypto/src" ],
      "@tetcoin/util-crypto/*": [ "packages/util-crypto/src/*" ],
      "@tetcoin/util": [ "packages/util/src" ],
      "@tetcoin/util/*": [ "packages/util/src/*" ],
      "@tetcoin/x-fetch": [ "packages/x-fetch/src/browser" ],
      "@tetcoin/x-global": [ "packages/x-global/src" ],
      "@tetcoin/x-randomvalues": [ "packages/x-randomvalues/src/browser" ],
      "@tetcoin/x-rxjs": ["packages/x-rxjs/src"],
      "@tetcoin/x-rxjs/*": ["packages/x-rxjs/src/*"],
      "@tetcoin/x-textdecoder": [ "packages/x-textdecoder/src/browser" ],
      "@tetcoin/x-textencoder": [ "packages/x-textencoder/src/browser" ],
      "@tetcoin/x-ws": [ "packages/x-ws/src/browser" ]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@tetcoin/ts",
      "./node_modules/@types"
    ]
  }
}
